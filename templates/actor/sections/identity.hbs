<div id='identity'>
  <div class='header'>{{i18n 'GURPS.identity'}}</div>
  <div class='fieldblock'>
    <div class='label'>{{i18n 'GURPS.identityName'}}:</div>
    <div class='field'><input
        name='name'
        class='gcs-input'
        type='text'
        value='{{actor.name}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.identityTitle'}}:</div>
    <div class='field'><input
        name='system.traits.title'
        class='gcs-input'
        type='text'
        value='{{system.traits.title}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.identityPlayer'}}:</div>
    <div class='field'><input
        name='system.traits.player'
        class='gcs-input'
        type='text'
        value='{{system.traits.player}}'
        {{disabled (not isEditing)}}
      /></div>
  </div>
</div>